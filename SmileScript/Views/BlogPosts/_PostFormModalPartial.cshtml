@model SmileScript.ViewModels.BlogPostViewModel
@using SmileScript.Enums

<!-- This form has been redesigned into a single, stacked column. -->
<form id="postForm" enctype="multipart/form-data">
    <input type="hidden" asp-for="BlogPost.Id" />

    <!-- Title Input -->
    <div class="form-group">
        <label asp-for="BlogPost.Title"></label>
        <input asp-for="BlogPost.Title" class="form-control form-control-lg" />
    </div>

    <!-- Settings and Header Image Cards in a row, but will stack on smaller screens -->
    <div class="row">
        <div class="col-md-6">
            <div class="card card-outline card-primary mb-3">
                <div class="card-header"><h3 class="card-title">Settings</h3></div>
                <div class="card-body">
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="form-group">
                            <label asp-for="BlogPost.Status"></label>
                            <select asp-for="BlogPost.Status" asp-items="Html.GetEnumSelectList<PostStatus>()" class="form-control"></select>
                        </div>
                    }
                    <div class="form-group">
                        <label asp-for="BlogPost.CategoryId">Category</label>
                        <select asp-for="BlogPost.CategoryId" class="form-control" asp-items="Model.CategoryList">
                            <option value="">-- Select Category --</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card card-outline card-primary">
                <div class="card-header"><h3 class="card-title">Header Image</h3></div>
                <div class="card-body">
                    <div id="current-image-container"></div>
                    <div class="form-group">
                        <label asp-for="HeaderImage">Upload New</label>
                        <input asp-for="HeaderImage" class="form-control-file" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>