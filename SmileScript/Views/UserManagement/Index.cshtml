@model IEnumerable<SmileScript.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "User Management";
}

<h1><i class="bi bi-people-fill"></i> User Management</h1>

<p>
    <!-- MODIFIED: Changed this from a link to a button and gave it an ID for our JS to target -->
    <button type="button" id="createUserBtn" class="btn btn-success"><i class="bi bi-plus-circle"></i> Create New User</button>
</p>

<table id="usersTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <!-- MODIFIED: The server-side Razor loop has been completely removed. -->
    <tbody>
        <!-- JavaScript will populate this section. We add a loading row as a placeholder. -->
        <tr>
            <td colspan="3" class="text-center">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </td>
        </tr>
    </tbody>
</table>

<!-- START: ADDED MODAL SHELL -->
<!-- This modal will be used for both creating and editing users. -->
<div class="modal fade" id="userFormModal" tabindex="-1" role="dialog" aria-labelledby="userFormModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userFormModalLabel">Modal Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="userFormModalBody">
                <!-- The partial view with the form will be loaded here via AJAX -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <!-- This button's text and action will be controlled by JavaScript -->
                <button type="button" id="saveUserBtn" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal (this remains unchanged) -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the user: <strong id="userEmailToDelete"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <!-- MODIFIED: Removed the form tag and added an ID to the button for our JS -->
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>
<!-- END: ADDED MODAL SHELL -->
@section Scripts {
    <!-- MODIFIED: The old DataTables init script is removed. It will be handled in our new JS file. -->
    <!-- We now reference our new, dedicated JavaScript file for this page. -->
    <script src="~/js/user-management.js" asp-append-version="true"></script>
}