@model IEnumerable<SmileScript.Models.BlogPost>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to SmileScript</h1>
    <p>A modern blog built with ASP.NET Core.</p>
</div>

<div class="row mt-5">
    @foreach (var post in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card blog-card h-100">
                <a asp-controller="Blog" asp-action="Details" asp-route-slug="@post.Slug">
                    @if (!string.IsNullOrEmpty(post.HeaderImageUrl))
                    {
                        <img src="@post.HeaderImageUrl" class="card-img-top blog-card-img" alt="Header Image for @post.Title">
                    }
                    else
                    {
                        <!-- Placeholder image if no header image exists -->
                        <img src="https://via.placeholder.com/400x250/dee2e6/6c757d.png?text=SmileScript" class="card-img-top blog-card-img" alt="Placeholder Image">
                    }
                </a>
                <div class="card-body d-flex flex-column">
                    <div class="card-meta mb-2">
                        <span class="text-muted small">@post.Category.Name</span>
                    </div>
                    <h5 class="card-title">
                        <a asp-controller="Blog" asp-action="Details" asp-route-slug="@post.Slug" class="text-dark">@post.Title</a>
                    </h5>
                    @* <p class="card-text flex-grow-1">A short description or excerpt will go here.</p> *@
                    <div class="card-author mt-auto">
                        <span class="text-muted small">By @post.Author.Email on @post.CreatedDate.ToString("MMM dd, yyyy")</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>