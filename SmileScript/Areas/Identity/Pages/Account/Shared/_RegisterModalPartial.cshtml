@model SmileScript.Areas.Identity.Pages.Account.RegisterModel

<form id="registerForm" asp-area="Identity" asp-page="/Account/Register" method="post">

    <!-- Modern Header with Icon -->
    <div class="auth-modal-header">
        <i class="bi bi-person-plus"></i>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <!-- Email Input Group -->
    <div class="input-group-modern mb-3">
        <i class="bi bi-envelope input-icon"></i>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
    </div>
    <span asp-validation-for="Input.Email" class="text-danger d-block mb-2"></span>

    <!-- Password Input Group -->
    <div class="input-group-modern mb-3">
        <i class="bi bi-lock input-icon"></i>
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
        <button type="button" class="password-toggle">
            <i class="bi bi-eye"></i>
        </button>
    </div>
    <span asp-validation-for="Input.Password" class="text-danger d-block mb-2"></span>

    <!-- Confirm Password Input Group -->
    <div class="input-group-modern mb-3">
        <i class="bi bi-lock input-icon"></i>
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
        <button type="button" class="password-toggle">
            <i class="bi bi-eye"></i>
        </button>
    </div>
    <span asp-validation-for="Input.ConfirmPassword" class="text-danger d-block mb-2"></span>

    <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Create Account</button>

    <div class="mt-3 text-center">
        <p class="small">Already have an account? <a href="#" class="login-modal-trigger">Log In</a></p>
    </div>
</form>