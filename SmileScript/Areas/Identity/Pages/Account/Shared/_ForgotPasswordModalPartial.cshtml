@model SmileScript.Areas.Identity.Pages.Account.ForgotPasswordModel

<form id="forgotPasswordForm" asp-area="Identity" asp-page="/Account/ForgotPassword" method="post">

    <!-- Modern Header with Icon -->
    <div class="auth-modal-header">
        <i class="bi bi-question-circle"></i>
    </div>
    <p class="text-center text-muted mb-4">Enter your email and we'll send you a link to reset your password.</p>

    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <!-- Email Input Group -->
    <div class="input-group-modern mb-3">
        <i class="bi bi-envelope input-icon"></i>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
    </div>
    <span asp-validation-for="Input.Email" class="text-danger d-block mb-2"></span>

    <button type="submit" class="w-100 btn btn-primary">Send Reset Link</button>

    <div class="mt-3 text-center">
        <p class="small"><a href="#" class="login-modal-trigger">Back to Login</a></p>
    </div>
</form>