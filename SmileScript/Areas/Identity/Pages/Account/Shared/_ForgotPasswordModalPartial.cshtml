@model SmileScript.Areas.Identity.Pages.Account.ForgotPasswordModel

<form id="forgotPasswordForm" asp-area="Identity" asp-page="/Account/ForgotPassword" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Input.Email" class="form-label">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
    <div class="mt-3 text-center">
        <p><a href="#" class="login-modal-trigger">Back to Login</a></p>
    </div>
</form>